{
  "name": "seal-wasm",
  "version": "0.0.3",
  "description": "A WASM package of Needleman-Wunsch & Smith-Waterman sequence alignment.",
  "main": "build/index.js",
  "type": "module",
  "directories": {
    "build": "build"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-types": "tsc",
    "build-types-watch": "tsc --watch",
    "build-js": "node ./build.js",
    "build-js-watch": "node ./build.js --watch",
    "build-html": "npx copyfiles -f ./src/*.html ./build",
    "build-html-watch": "nodemon -e .html --watch \"./src\" --exec \"npm run build-html\"",
    "build-rust": "wasm-pack build",
    "build-rust-watch": "nodemon -e .rs --watch \"./src\" --exec \"npm run build-rust\"",
    "serve": "npx http-server ./build",
    "_build": "npm run build-rust && npm run build-js && npm run build-types",
    "_dev": "concurrently \"npm run build-rust-watch\" \"npm run build-types-watch\" \"npm run build-js-watch\" \"npm run build-html-watch\" \"npm run serve\"",
    "build": "vite build && npm run build-types",
    "dev": "vite --port 8080"
  },
  "author": "Banou26",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.0.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.14.25",
    "esbuild-plugin-wasm": "^1.0.0",
    "http-server": "^14.1.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.6.2",
    "vite": "^4.3.8",
    "vite-plugin-top-level-await": "^1.3.0",
    "vite-plugin-wasm": "^3.2.2"
  }
}
